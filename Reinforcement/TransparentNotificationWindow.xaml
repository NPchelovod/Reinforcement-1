<Window x:Class="Reinforcement.TransparentNotificationWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reinforcement"
             mc:Ignorable="d" 
             Title="Уведомление" WindowStyle="None" AllowsTransparency="True" Background="Transparent" Topmost="True" ShowInTaskbar="False"
             Height="80" Width="300">
    <Grid Background="#66000000">
        <!-- Полупрозрачный фон -->
        <Border Background="#66000000" IsHitTestVisible="False" />
        <TextBlock x:Name="NotificationBlock" 
                   Foreground="White" 
                   FontSize="14" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   TextWrapping="Wrap"
                   IsHitTestVisible="False"/>
        <Button Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="1"
                Width="15" Height="20"
                Cursor="Hand"
                Background="Transparent" Foreground="White" FontSize="14" BorderBrush="{x:Null}"
                Click="CloseButton_Click" />
    </Grid>
</Window>
